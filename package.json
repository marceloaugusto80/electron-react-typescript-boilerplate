{
  "name": "electron-react-typescript-boilerplate",
  "version": "2.1.0",
  "description": "Template project for desktop apps using Electron, React and Typescript",
  "author": "Marcelo Augusto",
  "license": "MIT",
  "keywords": [
    "electron",
    "react",
    "typescript",
    "hot"
  ],
  "homepage": "https://github.com/marceloaugusto80/electron-react-typescript-boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marceloaugusto80/electron-react-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/marceloaugusto80/electron-react-typescript-boilerplate/issues"
  },
  "main": "main-process.js",
  "scripts": {
    "build": "npx webpack --env target=render && npx webpack --env target=main",
    "build-prod": "npx webpack --env production --env target=render && npx webpack --env production --env target=main",
    "start:server": "npx webpack serve --env target=render --env hot-reload",
    "start:electron": "npx webpack --env target=main && npx electron ./dist/main-process.js",
    "start": "npx concurrently npm:start:* --kill-others --kill-others-on-fail",
    "pack": "npx rimraf ./pack && npm run build-prod && npx electron-packager ./dist --out ./pack --overwrite",
    "test": "jest"
  },
  "dependencies": {
    "@types/jest": "^27.4.0",
    "fontsource-roboto": "^3.0.3",
    "jest": "^27.4.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "styled-components": "^5.3.3",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.19",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.5.1",
    "@types/webpack-env": "^1.16.3",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "electron": "^16.0.6",
    "electron-packager": "^15.4.0",
    "electron-reloader": "^1.2.1",
    "html-webpack-plugin": "^5.5.0",
    "react-refresh": "^0.11.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^5.3.0",
    "webpack-dev-server": "^4.7.2"
  }
}
